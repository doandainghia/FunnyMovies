<div class="row">
  <div class="col-md-4"></div>
  <div class="col-md-4">
    <%= form_with model: movie, local: true do |form| %>
      <% if movie.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(movie.errors.count, "error") %> prohibited this movie from being saved:</h2>

          <ul>
          <% movie.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

      <div class="field">
        <%= form.label :title %>
        <%= form.text_field :title, class: "form-control" %>
      </div>

      <div class="field">
        <%= form.label :url %>
        <%= form.text_field :url, class: "form-control" %>
      </div>

      <div class="field">
        <%= form.label :description %>
        <%= form.text_area :description, class: "form-control", rows: 8 %>
      </div>

      <div class="actions">
        <% button_name = form.object.new_record? ? "Share" : "Update" %>
        <%= form.submit button_name, class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>
