<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to root_path, id: "logo" do %>
      <span class="glyphicon glyphicon-home"></span>
      Funny Movies
    <% end %>

    <div class="user-action">
      <% if logged_in? %>
        <div class="logout-form">
          <span>
            Welcome
            <%= link_to current_user.email, user_path(current_user) %>
          </span>
          <%= button_tag(type: :button) do %>
            <% link_to "Share a movie", new_movie_path, class: "black-text" %>
          <% end %>
          <%= button_tag(type: :button) do %>
            <% link_to "Logout", logout_path, method: :delete, class: "black-text" %>
          <% end %>
        </div>
      <% else %>
        <%= form_for :session, url: login_path, html: {class: "login-form"} do |f| %>
          <%= f.email_field :email, placeholder: "email" %>
          <%= f.password_field :password, placeholder: "password" %>
          <%= f.submit "Log in", class: "" %>
          <%= button_tag(type: :button) do %>
            <%= link_to "Register", new_user_path, class: "black-text" %>
          <% end %>
        <% end %>
      <% end %>
    </div>
  </div>
</header>
